{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div id="dnpp-update-status" class="hidden">
      Запрос <span class="dnpp-step-number"></span> из <span class="dnpp-total-steps"></span>
      <progress class="dnpp-progress-bar" max="100" value="0"></progress>
    </div>
    <div class="btn-group" role="group">
      {{ macro.buttonIcon( geturl('addevent'), 'plus-square', 'Добавить мероприятие') }}
      {% if lang == 'ru' %}
        {#
        <a href="#" class="btn btn-default runparserdit" title="Обновить">
            <span class="fa fa-download"></span>
            <span class="btn-text">Загрузить с ДИТ</span>
        </a>
        #}
        <a href="#" class="btn btn-default dnpp-import" title="Загрузить с ДНПП">
          <span class="fa fa-download"></span>
          <span class="btn-text">Загрузить с ДНПП</span>
        </a>
        <a href="#" class="btn btn-default ict-import" title="Загрузить с ICT">
          <span class="fa fa-download"></span>
          <span class="btn-text">Загрузить с ДИТ</span>
        </a>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <style>
    .tt-suggestion strong {
      font-weight: bold;
      color: blue;
    }
    .twitter-typeahead {
      width: 100%;
    }

    .tt-menu {
        max-height: 320px;
        /*max-width: 450px;*/
        overflow: auto;
    }
  </style>

  <div class="row fork-module-content">
    <div class="col-md-12">
      {% form filter %}
        <div class="panel panel-default accordion">
          <h6><a href="#">Фильтры</a></h6>
          <div>
            <div class="panel-body">
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="active" class="control-label">Активность</label>
                      {% form_field active %} {% form_field_error active %}
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="main" class="control-label">Тип мероприятия</label>
                      {% form_field main %} {% form_field_error main %}
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="inAll" class="control-label">В общих списках</label>
                      {% form_field in_all %} {% form_field_error in_all %}
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="innoObjectTypeId" class="control-label">Тип инфраструктуры</label>
                      {% form_field innoObjectTypeId %} {% form_field_error innoObjectTypeId %}
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="oiiId" class="control-label">ID привязанного объекта</label>
                      {% form_field oii_id %} {% form_field_error oii_id %}
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="oiiName" class="control-label">Название компании</label>
                      {% form_field oii_name %} {% form_field_error oii_name %}
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="hidden" class="control-label">Видимость</label>
                      {% form_field hidden %} {% form_field_error hidden %}
                    </div>
                  </div>

                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="dateFrom" class="control-label">с</label>
                       {% form_field date_from %} {% form_field_error date_from %}
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="dateTo" class="control-label">по</label>
                       {% form_field date_to %} {% form_field_error date_to %}
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="titleFilter" class="control-label">Заголовок</label>
                      {% form_field title_filter %} {% form_field_error title_filter %}
                    </div>
                  </div>
                  <div class="col-md-4">
                    <label for="dnppId" class="control-label">id в ДНПП</label>
                    {% form_field dnpp_id %} {% form_field_error dnpp_id %}
                  </div>
                  <div class="col-md-4">
                    <label for="ictId" class="control-label">id в ДИТ</label>
                    {% form_field ict_id %} {% form_field_error ict_id %}
                  </div>
                </div>
            </div>
            <div class="panel-footer">
              <div class="btn-toolbar">
                <div class="btn-group pull-left">
                </div>
                <div class="btn-group pull-right">
                  <button id="clear" class="btn btn-danger" name="clear">
                    <span class="fa fa-refresh"></span>&nbsp;
                    Сбросить фильтр
                  </button>
                  <button id="search" type="submit" class="btn btn-primary" name="search">
                    <span class="fa fa-refresh"></span>&nbsp;
                    Применить фильтр
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endform %}
    </div>
  </div>

  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <div class="table-responsive">
          {{ dataGrid|raw }}
        </div>
      {% endif %}
      {% if not dataGrid %}
        <p>Нет записей</p>
      {% endif %}
    </div>
  </div>


  <script>
    $(function(){
      $('#clear').click(function (e) {
        $('#active,#main,#inAll,#oiiId,#dnppId,#ictId,#dateFrom,#dateTo,#innoObjectTypeId,#oiiName,#titleFilter,#hidden').val('');
      });

      $('.accordion').accordion({
        collapsible: true
        {% if showFilters == 'false' %}
          , active: {{ showFilters }}
        {% endif %}
      });

      $('#filter').submit(function() {
        let showFilters = $('.ui-accordion-header-active').length;
        if (showFilters !== 0) {
          $('#filter').append('<input type="hidden" name="show_filters" value="1">');
        }
      });

      var active_f = $("#active option:selected").val(),
        main_f = $("#main option:selected").val(),
        hiddenFilter = $("#hidden option:selected").val(),
        in_all_f = $("#inAll option:selected").val(),
        innoObjectTypeId = $("input[name='innoObjectTypeId']").val(),
        oii_id_f = $("input[name='oii_id']").val(),
        oii_name = $("input[name='oii_name']").val(),
        dnpp_id_f = $("input[name='dnpp_id']").val(),
        ictFilter = $("input[name='ict_id']").val(),
        date_from = $("input[name='date_from']").val(),
        date_to = $("input[name='date_to']").val(), 
        pag_links = $("ul.pagination a"),
        titleFilter = $("input[name='title_filter']").val();

      if(pag_links.length > 0){
        pag_links.each(function(index){
          var href = $(this).attr('href'),
              addit_str = '';

          addit_str += '&active='+active_f;            
          addit_str += '&main='+main_f;
          addit_str += '&in_all='+in_all_f;
          addit_str += '&innoObjectTypeId=' + innoObjectTypeId;
          addit_str += '&oii_id='+oii_id_f;
          addit_str += '&oii_name=' + oii_name;
          addit_str += '&dnpp_id='+dnpp_id_f;
          addit_str += '&ict_id=' + ictFilter;
          addit_str += '&date_from='+date_from;
          addit_str += '&date_to='+date_to;
          addit_str += '&titleFilter=' + titleFilter;
          addit_str += '&hidden=' + hiddenFilter;

          $(this).attr('href',href+addit_str);
        });
      }

    });
  </script>

{% endblock %}
