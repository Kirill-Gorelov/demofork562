{% extends 'Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}


{% block actionbar %}{% endblock %}

{% block content %}
{% form edit %}
<div class="row fork-module-content">
    <div class="col-md-12">
      <div class="form-group">
          <label for="title" class="control-label">Заголовок {{ macro.required }}</label>
          {% form_field title %} {% form_field_error title %}
      </div>
    </div>
  </div>

<div class="row fork-module-content">
  <div class="col-md-12">
    <div>
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active mr-auto">
          <a href="#tabContent" aria-controls="tabContent" role="tab" data-toggle="tab">{{ 'lbl.Content'|trans|ucfirst }}</a>
        </li>
        <li role="presentation">
          <a href="#tabImage" aria-controls="tabImage" role="tab" data-toggle="tab">{{ 'lbl.image'|trans|ucfirst }}</a>
        </li>
        <li role="presentation">
          <a href="#tabText" aria-controls="tabText" role="tab" data-toggle="tab">{{ 'lbl.Description'|trans|ucfirst }}</a>
        </li>
        <li role="presentation">
          <a href="#tabSEO" aria-controls="tabSEO" role="tab" data-toggle="tab">{{ 'lbl.SEO'|trans|ucfirst }}</a>
        </li>
        <li role="presentation">
          <a href="#tabMeta" aria-controls="tabMeta" role="tab" data-toggle="tab">{{ 'lbl.Meta'|trans|ucfirst }}</a>
        </li>

        {% if price_catalog %}
        <li role="presentation">
          <a href="#tabCatalogPrice" aria-controls="tabCatalogPrice" role="tab" data-toggle="tab">{{ 'lbl.CatalogPrice'|trans|ucfirst }}</a>
        </li>
        {% endif %}
      </ul>
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tabContent">
          <div class="row">
              <label for="active" class="control-label">Активно</label>
              {% form_field active %} {% form_field_error active %}

              <label for="sort" class="control-label">Сортировка</label>
              {% form_field sort %} {% form_field_error sort %}
  
          </div>

          <div class="row">
              <label for="code" class="control-label">Символьный код {{ macro.required }}</label>
              {% form_field code %} {% form_field_error code %}
  
          </div>

          <div class="row">
              <label for="description" class="control-label">Текст</label>
              {% form_field description %} {% form_field_error description %}
  
          </div>
        </div>

        <div role="tabpanel" class="tab-pane" id="tabImage">
            <div class="row">
              <div class="form-group">
                <label for="image" class="control-label">Картинка</label>
                {% form_field image %} {% form_field_error image %}
              </div>
            </div>
          </div>

          <div role="tabpanel" class="tab-pane" id="tabText">
              <div class="row">
                  <label for="text" class="control-label">Полное описание</label>
                  {% form_field text %} {% form_field_error text %}
              </div>
            </div>

        <div role="tabpanel" class="tab-pane" id="tabSEO">
            <div class="row">
                {# {% seo %} #}
            </div>
          </div>

          <div role="tabpanel" class="tab-pane" id="tabMeta">
            <div class="row">
              {% if meta|trim|length > 2 %}
              <input type="hidden" id="meta_data" value="{{meta}}">

              <div id="editor_meta"></div>
              {% else %}
              <h4>У Вас не создано ни одного типа</h4>
              {# <a href="{{link_create_meta}}">Создать</a> #}
              {% endif %}

          </div>
        </div>

        {% if price_catalog %}
        <div role="tabpanel" class="tab-pane" id="tabCatalogPrice">
          <div class="row">

              <div class="form-group">
                <label for="text" class="control-label">Закупочная цена</label>
                {% form_field purchase_price %} {% form_field_error purchase_price %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Цена</label>
                {% form_field price %} {% form_field_error price %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Вес</label>
                {% form_field weight %} {% form_field_error weight %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Длина</label>
                {% form_field length %} {% form_field_error length %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Ширина</label>
                {% form_field width %} {% form_field_error width %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Высота</label>
                {% form_field height %} {% form_field_error height %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Колличество</label>
                {% form_field quantity %} {% form_field_error quantity %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Скидка</label>
                {% form_field discount %} {% form_field_error discount %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Коэффециэнт</label>
                {% form_field coefficient %} {% form_field_error coefficient %}
              </div>

              <div class="form-group">
                <label for="text" class="control-label">Тип измерения</label>
                {% form_field unit %} {% form_field_error unit %}
              </div>

          </div>
        </div>
        {% endif %}
  
      </div>
  
      


  <div class="btn-group pull-left" role="group">
    <a class="btn btn-primary" href="{{geturl('category_element_index')}}&cat={{get_cat}}&cti={{get_cti}}" role="button">Отмена</a>
  </div>

  <div class="btn-toolbar">
    <div class="btn-group pull-right" role="group">
      <button id="addButton" type="submit" name="add" class="btn btn-primary">
        <span class="fa fa-plus-square"></span>Сохранить
      </button>
    </div>
  </div>



  {% endform %}


{%include "EnerIblocks/Layout/Templates/js.html.twig" %}
{% endblock %}
